<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".Share"
    android:id="@+id/Share">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="org.kaufer.soundshare.Info"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_info"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Share Sound"
        android:id="@+id/textView"
        android:layout_below="@+id/fragment"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Sound"
        android:id="@+id/share"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/share"
        android:layout_alignLeft="@+id/fragment"
        android:layout_alignStart="@+id/fragment"
        android:layout_alignRight="@+id/fragment"
        android:layout_alignEnd="@+id/fragment"
        android:layout_below="@+id/textView"
        android:paddingTop="100dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/song"
            android:layout_gravity="center_horizontal"
            android:hint="Song Name"
            android:gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/artist"
            android:layout_gravity="center_horizontal"
            android:hint="Artist"
            android:gravity="center_horizontal" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/genre"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:longClickable="false" />
    </LinearLayout>

</RelativeLayout>